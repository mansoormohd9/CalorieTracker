@model IEnumerable<CalorieTrackerApi.Dtos.UserDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Users List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAdmin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  userName=item.UserName }) |
                @Html.ActionLink("Details", "Details", new { userName = item.UserName }) |
                @Html.ActionLink("Delete", "DeleteUser", "User", new { userName = item.UserName })
            </td>
        </tr>
}
    </tbody>
</table>
